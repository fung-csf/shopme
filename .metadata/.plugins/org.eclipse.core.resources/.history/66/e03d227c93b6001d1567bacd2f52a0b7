server.port=8080
server.servlet.context-path=/ShopmeAdmin

spring.datasource.url=jdbc:mysql://localhost:3306/shopmedb
spring.datasource.username=root
spring.datasource.password=root

#tell hibernate to create/update tables in shopmedb database based on entity classes
#hibernate forward engineering
spring.jpa.hibernate.ddl-auto=update
#set this property to "true" toshow sql statements in the console
spring.jpa.show-sql=false
#make sql statements more readable in console
spring.jpa.properties.hibernate.format_sql=true
#dialect
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

#set to "true" to enable debug-level logs in console for the purpose of debugging 
#debug=true

#trace=true
#logging.level.root=WARN
#logging.level.com.shopme=DEBUG


#write logs to a log file
logging.file.name=Shopme-backend.log
#naming pattern for the log files (%d refers to date) and (%i refers to file number)
logging.logback.rollingpolicy.file-name-pattern=Shopme-backend-%d{yyyy-MM-dd}.%i.log
#max size for a log file is 100KB
logging.logback.rollingpolicy.max-file-size=100KB
#total size of all log files
logging.logback.rollingpolicy.total-size-cap=1MB
#keep log for 14 days
logging.logback.rollingpolicy.max-history=14
#clean log file based on max-history and size-cap
logging.logback.rollingpolicy.clean-history-on-start=true
